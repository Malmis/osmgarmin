# This file contains all the rules for tourism=*.

#tourism=* & area!=no & waterway!=* [0x13 resolution 24]
tourism=caravan_site & tents=no [0x05 default_name="RV-park" resolution 22]
tourism=camp_site | tourism=caravan_site  [0x52 default_name="camping" resolution 22]
tourism=picnic_site [0x1e resolution 24]
tourism=chalet  [0x50 default_name="bungalowpark" resolution 22]
tourism=* & tourism ~ '(hotel|hostel|motel|guest_house|bed_and_breakfast|alpine_hut)'  [0x13 resolution 22]
tourism=zoo [0x17 resolution 22]